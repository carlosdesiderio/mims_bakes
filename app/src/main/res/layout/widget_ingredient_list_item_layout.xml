<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/widget_ingredient_list_item_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/widget_list_item_top_margin"
        android:paddingBottom="@dimen/widget_list_item_bottom_margin"
        android:textColor="@color/colorFontPrimary"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/horizontal_divider"
        android:layout_gravity="bottom"/>

</FrameLayout>