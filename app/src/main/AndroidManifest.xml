<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="uk.me.desiderio.mimsbakes">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <provider
            android:name=".data.BakesContentProvider"
            android:authorities="uk.me.desiderio.mimsbakes"
            android:exported="true" />

        <service android:name=".data.BakesDataIntentService" />

        <activity android:name=".RecipeDetailsActivity"
            android:launchMode="singleTop"/>
        <activity android:name=".StepVideoActivity" />

        <receiver android:name=".widget.BakesAppWidget">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/bakes_app_widget_info" />
        </receiver>
        <service android:name=".widget.BakesWidgetUpdateService"
            android:exported="false"/>
        <service android:name=".widget.BakesRemoteViewService"
            android:permission="android.permission.BIND_REMOTEVIEWS" />
    </application>

</manifest>